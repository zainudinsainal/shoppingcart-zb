<div class="container">
  <div class="row">
    <div class="col-md-7 mt-3">
      <%= filestack_image @product.image, transform: filestack_transform.resize(width:600, height:600), class: "img-fluid rounded mx-auto"%>
    </div>
    <div class="col-md-5 mt-3">
      <p>Name: <%= @product.name %></p>
      <p>Price: <%= number_to_currency(@product.price) %></p>
      <p>Description: <%= @product.description %></p>
      <% @product.categories.each do |category| %>
      <p>Categories: <%= category.name %></p>
      <p><%= link_to 'Add to cart', products_path, class: "btn btn-success btn-block" %></p>
      <% end %>
    </div>
  <%= link_to 'Back to index', products_path %>
  </div>
</div>