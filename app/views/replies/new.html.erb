
<div class="container">
  <div class="row">
    <div class="col-md-8 mt-4">
      <div class="card bg-light">
        <div class="card-body">
          <p><b>@<%= @review.user.name %> </b>: <%= @review.content %> </p>
          <%= form_for @reply, url: product_review_replies_path, method: :post do |f| %>
          <div class="form-group">
            <%= f.text_area :body, placeholder: "Leave a reply", class: "form-control"  %>
          </div>
          <div class="form-group">
            <%= link_to 'Back', product_path(@product), class: "btn btn-warning" %>
            <%= f.submit "Reply", class: "btn btn-success" %>
            <%# Reply.all.body %>
          </div>
          <% end %>  
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <% @review.replies.each do |reply| %>
      <div class="card">
        <div class="card-body">
          <p><small><b>@<%= reply.user.name %></b> Replied <%= time_ago_in_words(reply.created_at)%> ago</small></p>
          <p><%= icon('far', 'comment-alt') %>&nbsp;&nbsp;<%= reply.body %>&nbsp;&nbsp;</p>
          <% if reply.user == current_user %>
            <%= link_to icon('far', 'trash-alt'), product_review_reply_path(@product, @review, reply), method: :delete %>
          <% end %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>