<% if @product.errors.any? %>
  <div class="container ">
    <div class="row d-flex justify-content-center">
      <div class="alert alert-info col-md-6" role="alert">
        <h4>We have some errors here !</h4>
          <ul>
            <% @product.errors.full_messages.each do |msg| %>
              <li class="mb-0"><%= msg %></li>
            <% end %>
          </ul>
        <hr>
      </div>
    </div>
  </div>
<% end %>

<div class="container d-flex justify-content-center">
  <div class="row">
<%= form_for [:admin, @product] do |f| %>
    <div class="card mt-5">
      <div class="card-header">
        <h4>Forms</h4>
      <div class="card-body">
        <form>

          <div class="form-group">
            <%= f.label :categories %>
            <%= f.collection_select :categories, Category.all, :id, :name, {prompt: true}, {class: "form-control"} %>
          </div>
        
          <div class="form-group">
            <%= f.label :name, "Name" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :price, "Price" %>
            <%= f.text_field :price, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :image, "Image" %>
            <%= f.text_field :image, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.submit class: "btn btn-primary" %>
          </div>
        </form>
      </div>
      </div>
    </div>
     <% end %>
  </div>
</div