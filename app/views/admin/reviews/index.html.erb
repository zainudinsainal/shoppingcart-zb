<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Reviews</h1>
      <div>
        <%= link_to 'Food', admin_products_path %> |
        <%= link_to 'Categories', admin_categories_path %> | 
        <%= link_to 'Restaurant', admin_restaurants_path %> |
        <%= link_to 'Reviews', admin_reviews_path %> |
        <%= link_to 'Orders', admin_orders_path %> |
        <%= link_to 'Transactions', admin_transactions_path %>   
      </div>
      <br>
      <div>
      </div>
      <br>
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Date</th>
            <th scope="col">Food</th>
            <th scope="col">Content</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% @reviews.each do |review| %>
            <tr>
              <td><%= review.user.name %></td>
              <td><%= review.created_at.strftime('%-d/%-m/%y') %></td>
              <td><%= review.product.name%></td>
              <td><%= review.content%></td>
              <td>
              <%= link_to 'Delete', admin_review_path(review), method: :delete, data: { confirm: "Are you sure?"} %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>