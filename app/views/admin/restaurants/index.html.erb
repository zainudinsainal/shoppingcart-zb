<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Restaurant</h1>
      <div>
        <%= link_to 'Food', admin_products_path %> |
        <%= link_to 'Categories', admin_categories_path %> | 
        <%= link_to 'Restaurant', admin_restaurants_path %> |
        <%= link_to 'Orders', admin_orders_path %> |
        <%= link_to 'Food Reviews', admin_reviews_path %> |
        <%= link_to 'Transactions', admin_transactions_path %>    
      </div>
      <br>
      <div>
        <%= link_to 'New Restaurant', new_admin_restaurant_path, class: "btn btn-primary" %>
      </div>
      <br>
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Restaurant</th>
            <th scope="col">Address</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @restaurants.each do |restaurant| %>
            <tr>
              <th scope="row"><%= restaurant.id %></th>
              <td><%= restaurant.stall_name %></td>
              <td><%= restaurant.stall_address %></td>
            <td>
              <%= link_to 'Show', admin_restaurant_path(restaurant) %>
              <%= link_to 'Edit', edit_admin_restaurant_path(restaurant) %>
              <%= link_to 'Delete', admin_restaurant_path(restaurant), method: :delete, data: {confirm:"Are you sure?"} %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>