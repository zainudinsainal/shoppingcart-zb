<% if @product.errors.any? %>
  <div class="container ">
    <div class="row d-flex justify-content-center">
      <div class="alert alert-info col-md-6" role="alert">
        <h4>We have some errors here !</h4>
          <ul>
            <% @product.errors.full_messages.each do |msg| %>
              <li class="mb-0"><%= msg %></li>
            <% end %>
          </ul>
        <hr>
      </div>
    </div>

<% end %>


  <div class="row d-flex justify-content-center">
    <div class="col-md-6 mt-5">
  <%= form_for [:admin, @restaurant] do |f| %>
      <div class="card">
          <div class="card-header">
            <h4>Forms</h4>
            <div class="card-body">
              <form>
              
                <div class="form-group">
                  <%= f.label :stall_name, "Name" %>
                  <%= f.text_field :stall_name, class: "form-control" %>
                </div>

                <div class="form-group">
                  <%= f.label :stall_address "Address" %>
                  <%= f.text_area :stall_address, rows: 3, class: "form-control"  %>
                </div>

                <div class="form-group">
                  <%= f.file_field :picture %>
                </div>

                <div class="form-group">
                  <%= f.submit class: "btn btn-primary" %>
                </div>
              </form>
            </div>
          </div>
        </div>
      <% end %>
    </div>
</div