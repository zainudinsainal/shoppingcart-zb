<div class="container">
  <h1>Food categories</h1>
  <div>
    <%= link_to 'Products', admin_products_path %> |
    <%= link_to 'Categories', admin_categories_path %>
  </div>
  <br>
  <div class="form-inline" >
    <%= form_for [:admin, @category] do |f| %>
      <div class="form-group">
        <%= f.text_field :name, placeholder: "Category Name",  class: "form-control mr-2" %>
      <%= f.submit class: "btn btn-primary mr-2" %>
      <% if @category.errors.any? %>
        <%= @category.errors.full_messages.to_sentence %>
      <% end %>
      </div>
    <% end %>
  </div>
  <br>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>#</th>
            <th>Category Name</th>
            <th>#</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
          <tr>
            <th scope="row"><%= category.id %></th>
            <td><%= category.name %></td>
            <td>
            <%= link_to 'Edit', edit_admin_category_path(id: category.id) %>
            <%= link_to 'Delete', admin_category_path(category), method: :delete, data: { confirm: "Are you sure?"} %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>