<div class="container ">
  <div class="row d-flex justify-content-center">
  <div class="col-md-7">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="card mt-5 mb-5">
        <div class="card-header">
          <h4>Sign Up</h4>
          <div class="card-body">
            <form>

              <div class="form-group">
                <%= f.label :name, "Name" %>
                <%= f.text_field :name, class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.label :email, "E-mail" %>
                <%= f.email_field :email, class: "form-control", autocomplete: "email" %>
              </div>

              <div class="form-group">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.label :address, "Address" %>
                <%= f.text_area :address, row: 2, class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.label :gender, "Gender" %><br>
                <% User.genders.keys.each do |gender| %>
                  <%= f.radio_button :gender, gender %>
                  <%= f.label gender.to_sym %>
                <% end %>
              </div>

              <div class="form-group">
                <%= f.label :birthday, "Date of Birth" %>
                <%= f.date_select :birthday, class: "form-control" %>
              </div>

              <div class="form-group">
                <%= link_to 'Back', new_user_session_path, class: 'btn btn-info'%> 
                <%= f.submit "Sign Up", class: "btn btn-primary" %>
              </div>
            </form>
          </div>
        </div>
      </div>
     <% end %>
    </div>
  </div>
