<% if @user.errors.any? %>
  <div class="container ">
    <div class="row d-flex justify-content-center">
      <div class="alert alert-info col-md-6" role="alert">
        <h4>We have some errors here !</h4>
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
              <li class="mb-0"><%= msg %></li>
            <% end %>
          </ul>
        <hr>
      </div>
    </div>
  </div>
<% end %>

<div class="container ">
  <div class="row d-flex justify-content-center">
  <div class="col-md-7">
    <%= form_for @user do |f| %>
    <div class="card mt-5 mb-5">
      <div class="card-header">
        <h4>My Profile</h4>
      <div class="card-body">
        <form>

          <div class="form-group">
            <%= f.label :name, "Name" %>
            <%= f.text_field :name, class: "form-control"%>
          </div>

          <div class="form-group">
            <%= f.label :birthday, "Date of Birth" %>
            <%= f.date_select :birthday, start_year: 1920, end_year: Date.today.year, order: [:day, :month, :year], default: Date.today, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :address, "Address" %>
            <%= f.text_area :address, row: 2, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :gender, "Gender" %><br>
            <% User.genders.keys.each do |gender| %>
              <%= f.radio_button :gender, gender %>
              <%= f.label gender.to_sym %>
            <% end %>
          </div>


          <div class="form-group">
            <%= link_to 'Back', products_path, class: 'btn btn-info'%>
            <%= f.submit "Update Profile", class: "btn btn-primary" %>
          </div>
        </form>
      </div>
      </div>
    </div>
     <% end %>
  </div>

  </div>
</div
